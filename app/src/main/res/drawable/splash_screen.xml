<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">
    <item android:drawable="@color/white_FFFFFF" />
    <item
        android:height="270dp"
        android:bottom="150dp"
        android:gravity="fill_horizontal|center">
        <inset
            android:drawable="@drawable/ic_pin_vector"
            android:insetLeft="36dp"
            android:insetRight="36dp" />
    </item>

    <item
        android:height="150dp"
        android:gravity="fill_horizontal|center"
        android:top="250dp">
        <inset
            android:drawable="@drawable/ic_splash_text"
            android:insetLeft="36dp"
            android:insetRight="36dp" />
    </item>

</layer-list>