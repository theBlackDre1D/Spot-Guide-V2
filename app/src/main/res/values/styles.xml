<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <!-- BUTTON -->
    <!-- <view>.<type>.<background_color>.<border_color>-->

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="cornerRadius">20dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="cornerRadius">25dp</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="Button.Full" parent="AppButton">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Middle" parent="AppButton">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button.Outlined.Full" parent="Button.Outlined">
        <item name="android:layout_width">match_parent</item>
        <!--        <item name="strokeWidth">1dp</item>-->
    </style>

    <style name="Button.Outlined.Middle" parent="Button.Outlined">
        <item name="android:layout_width">wrap_content</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <!--  Bottom sheet dialog  -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_rounded_corners_30_top</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="CustomDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <!-- TEXT VIEW - PARENTS -->
    <style name="sfpro_text__text_view" parent="Widget.MaterialComponents.TextView">
<!--        <item name="android:fontFamily">@font/roboto</item>-->
    </style>

    <style name="sfpro_text_bold__text_view" parent="Widget.MaterialComponents.TextView">
<!--        <item name="android:fontFamily">@font/roboto</item>-->
        <item name="android:textStyle">bold</item>
