    <style name="sfpro_text_italic__text_view" parent="Widget.MaterialComponents.TextView">
<!--        <item name="android:fontFamily">@font/roboto</item>-->
        <item name="android:textStyle">italic</item>
    </style>

    <style name="sfpro_display__text_view" parent="Widget.MaterialComponents.TextView">
<!--        <item name="android:fontFamily">@font/roboto</item>-->
    </style>

    <style name="sfpro_display_bold__text_view" parent="Widget.MaterialComponents.TextView">
<!--        <item name="android:fontFamily">@font/roboto</item>-->
        <item name="android:textStyle">bold</item>
    </style>


